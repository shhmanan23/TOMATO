<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?android:attr/colorControlActivated">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="409dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041"
        app:srcCompat="@drawable/story" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/b2"
        android:text="We love restaurants as much as you do. That’s why we’ve been helping them fill tables since 1999.Whether you’re browsing for a quick bite or planning a big night, TOMATO will help you discover the perfect dining experience. Your new favorite restaurant is out there – go ahead, dig in!."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.926"
        tools:padding="2dp"
        android:gravity="fill"
        tools:textColor="@color/common_google_signin_btn_text_dark_focused"
        tools:textSize="30sp" />
</android.support.constraint.ConstraintLayout>